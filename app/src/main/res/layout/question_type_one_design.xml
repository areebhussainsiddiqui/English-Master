<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Question 1/2"
            android:layout_marginTop="35dp"
            android:id="@+id/question_number"
            android:fontFamily="@font/montserrat_light"
            android:textSize="16sp"
            android:textColor="#000"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_number"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/question_img"
            android:src="@drawable/ic_launcher_foreground"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/listen_icon"
            android:id="@+id/listen_icon"
            android:layout_below="@id/question_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22dp"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listen_icon"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="32dp">

        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/option_1"
                android:layout_alignParentStart="true"
                android:background="@drawable/black_border">

            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:background="@drawable/wrong"
                       android:layout_gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 1"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/option_2"
                android:layout_alignParentEnd="true"
                android:background="@drawable/black_border">

            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:background="@drawable/arrowright"
                       android:layout_gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 2"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/option_3"
                android:layout_marginTop="30dp"
                android:layout_below="@id/option_1"
                android:layout_alignParentStart="true"
                android:background="@drawable/black_border">

            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:visibility="gone"
                       android:layout_gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 3"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/option_4"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/option_2"
                android:layout_marginTop="30dp"
                android:background="@drawable/black_border">

            <ImageView android:layout_width="25dp"
                       android:layout_height="25dp"
                       android:visibility="gone"
                       android:layout_gravity="right"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="option 4"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:fontFamily="@font/montserrat_light"
                    android:layout_gravity="center"/>

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>