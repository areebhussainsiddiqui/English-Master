<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragments.IdiomsFragment">

    <!-- TODO: Update blank fragment layout -->
  <androidx.cardview.widget.CardView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="50dp"
          android:layout_marginHorizontal="20dp"
          android:layout_gravity="center_vertical"
          app:cardCornerRadius="2dp"
          app:cardElevation="20dp"
  >
  <LinearLayout

          android:layout_width="match_parent"
          android:layout_gravity="center"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
  >

    <LinearLayout
            android:orientation="vertical"
            android:id="@+id/Idiom_ColorLayout"
            android:layout_width="5dp"
            android:background="#22ab1e"
            android:layout_height="match_parent">

    </LinearLayout>

      <LinearLayout
              android:padding="50dp"
              android:layout_marginHorizontal="20dp"
              android:layout_gravity="center_vertical"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

          <TextView
                  android:id="@+id/Idioms_heading_TV"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="11.3sp"
                  android:textColor="#000000"
                  android:letterSpacing="0.02"
                  android:fontFamily="@font/montserrat_bold"
                  android:lineSpacingExtra="-2.7sp"
                  android:textAlignment="center"
                  android:gravity="center_horizontal"
                  android:text="A blessing in disguise"
                  android:layout_marginVertical="20dp"
          />
          <TextView
                  android:id="@+id/Idioms_Sentenc_TV"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="11.3sp"
                  android:textColor="#000000"
                  android:letterSpacing="0.02"
                  android:gravity="center"
                  android:fontFamily="@font/montserrat_regular"
                  android:text="An apparent misfortune that eventually has good results.
            &quot;being omitted from the World Cup squad was a blessing in disguise&quot;"
          />

          <TextView
                  android:id="@+id/Idioms_Translation_TV"
                  android:layout_marginVertical="20dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="11.3sp"
                  android:textColor="#000000"
                  android:letterSpacing="0.02"
                  android:gravity="center"
                  android:textStyle="italic"
                  android:fontFamily="@font/montserrat_regular"
                  android:text="Translation"
          />
          />
      </LinearLayout>

  </LinearLayout>

  </androidx.cardview.widget.CardView>

</FrameLayout>