<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Question 1/2"
            android:layout_marginTop="35dp"
            android:id="@+id/question_number"
            android:fontFamily="@font/montserrat_light"
            android:textSize="16sp"
            android:textColor="#000"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/question_number"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/question_statement"
            android:text="Statement"
            android:textSize="16sp"
            android:textColor="#000"
            android:fontFamily="@font/montserrat_light"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/listen_icon"
            android:id="@+id/listen_icon"
            android:layout_below="@id/question_statement"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"/>

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listen_icon"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="32dp">

        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/option_1"
                android:layout_alignParentStart="true"
                android:background="@drawable/black_border">

            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:background="@drawable/wrong"
                       android:layout_gravity="right"/>

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/option_2"
                android:layout_alignParentEnd="true"
                android:background="@drawable/black_border">

            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:background="@drawable/arrowright"
                       android:layout_gravity="right"/>

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/option_3"
                android:layout_marginTop="30dp"
                android:layout_below="@id/option_1"
                android:layout_alignParentStart="true"
                android:background="@drawable/black_border">

            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:background="#f00"
                       android:visibility="gone"
                       android:layout_gravity="right"/>

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_gravity="center"/>

        </FrameLayout>

        <FrameLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/option_4"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/option_2"
                android:layout_marginTop="30dp"
                android:background="@drawable/black_border">

            <ImageView android:layout_width="30dp"
                       android:layout_height="30dp"
                       android:background="#0f0"
                       android:visibility="gone"
                       android:layout_gravity="right"/>

            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_gravity="center"/>

        </FrameLayout>

    </RelativeLayout>


</RelativeLayout>